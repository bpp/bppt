{
  "name": "bppt",
  "version": "1.0.0",
  "description": "BPP Tree Viewer - View MCMC trees from BPP phylogenetic analysis",
  "type": "module",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:electron": "electron-vite dev",
    "build:electron": "electron-vite build",
    "package": "electron-vite build && electron-builder",
    "package:linux": "electron-vite build && electron-builder --linux",
    "package:mac": "electron-vite build && electron-builder --mac",
    "package:win": "electron-vite build && electron-builder --win"
  },
  "keywords": ["bpp", "phylogenetics", "tree", "viewer", "mcmc", "newick"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^3.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  },
  "build": {
    "appId": "com.bpp.tree-viewer",
    "productName": "BPPT",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "out/**/*"
    ],
    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64"] },
        { "target": "deb", "arch": ["x64"] }
      ],
      "category": "Science"
    },
    "mac": {
      "target": [
        { "target": "dmg", "arch": ["x64", "arm64"] }
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ]
    }
  }
}
